{%- paginate blog.articles by 6 -%}
  <section class="rosa-blogs-page container">

    <div class="rosa-blogs-page-title">{{ blog.title | escape }}</div>
    <div class="rosa-blogs-page-filters">
      <div class="rosa-blogs-page-filters-item rosa-blogs-page-filters-item_active">tout</div>
      <div class="rosa-blogs-page-filters-item">CATEGORIE X</div>
      <div class="rosa-blogs-page-filters-item">CATEGORIE X</div>
      <div class="rosa-blogs-page-filters-item">CATEGORIE X</div>
      <div class="rosa-blogs-page-filters-item">CATEGORIE X</div>
      <div class="rosa-blogs-page-filters-item">CATEGORIE X</div>
    </div>

    <div class="rosa-blogs-page-content">
      {%- for article in blog.articles -%}
        <a href="{{ article.url }}" class="rosa-blogs-page-item">
          <img src="{{ article.image.src | img_url: '339x318', crop: 'center' }}" alt="{{ article.image.src.alt | escape }}" class="rosa-blogs-page-item-pic">
          <div class="rosa-blogs-page-item-title">{{ article.title | truncate: 50 | escape }}</div>
          <div class="rosa-blogs-page-item-link">EN SAVOIR PLUS</div>
        </a>
      {%- endfor -%}
    </div>

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </section>

{%- endpaginate -%}
