{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<section class="rosa-blocks">
  <div class="rosa-blocks-inner container section-{{ section.id }}-padding">
    {%- for block in section.blocks -%}
      <div class="rosa-blocks-item">
        <img src="{{ block.settings.image | img_url: 'width 25', crop: 'center' }}" class="rosa-blocks-item-pic" alt="{{ block.settings.image.alt }}" loading="lazy">
        <div class="rosa-blocks-item-text1">{{ block.settings.text1 }}</div>
        <div class="rosa-blocks-item-text2">{{ block.settings.text2 }}</div>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "rosa row of blocks",
  "presets": [
    {
      "name": "rosa row of blocks",
      "category": "Custom"
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 45
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 45
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "text1",
          "default": "text 1",
          "label": "text 1"
        },
        {
          "type": "text",
          "id": "text2",
          "default": "text 2",
          "label": "text 2"
        }
      ]
    }
  ]
}

{% endschema %}
