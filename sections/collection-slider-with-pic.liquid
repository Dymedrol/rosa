{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="rosa-collection-slider2 {% if section.settings.is_reverse %} rosa-collection-slider2_reverse{% endif %} section-{{ section.id }}-padding">
    <div class="rosa-collection-slider2-info">
        <div class="rosa-collection-slider2-info-inner">
            <div class="rosa-collection-slider2-info-text1">{{ section.settings.text1 }}</div>
            <div class="rosa-collection-slider2-info-text2">{{ section.settings.text2 }}</div>
            <div class="rosa-collection-slider2-info-text3">{{ section.settings.text3 }}</div>

            <div class="rosa-collection-slider2-info-slider owl-carousel">
                {% for product in section.settings.collection.products limit:5 %}
                  <div href="{{ product.url }}" class="rosa-collection-slider2-info-slide">
                      <img src="{{ product.featured_image | img_url: '436x406', crop: 'center' }}" alt="" class="rosa-collection-slider2-info-slide-pic" loading="lazy">
                      <div class="rosa-collection-slider2-info-slide-title">{{ product.title }}</div>
                      <div class="rosa-collection-slider2-info-slide-text">{{ product.vendor }}</div>
                  </div>
                {% endfor %}
            </div>

            <a href="{{ section.settings.collection.url }}" class="rosa-collection-slider2-info-collection-link">DÃ‰COUVRIR LA COLLECTION</a>
        </div>
    </div>
    <div class="rosa-collection-slider2-pic-wrapper">
      <img src="{{ section.settings.slider_2_image | img_url: '1328x1644', crop: 'center' }}" alt="{{ section.settings.slider_2_image.alt }}" loading="lazy">
    </div>
</section>

{% schema %}
{
  "name": "slider with side picture",
  "presets": [
    {
      "name": "slider with side picture",
      "category": "Custom"
    }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "is_reverse",
      "default": false,
      "label": "reverse block"
    },
    {
      "type": "image_picker",
      "id": "slider_2_image",
      "label": "side image"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "text 1",
      "default": "text 1"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "text 2",
      "default": "text 2"
    },
    {
      "type": "richtext",
      "id": "text3",
      "label": "text 3",
      "default": "<p>text 3</p>"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "collection"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 45
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 45
    }
  ]
}

{% endschema %}
