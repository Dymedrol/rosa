{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<template id="favorites-template">
  <div class="rosa-favorites-item">
    <div class="rosa-favorites-item-card">
      <svg class="rosa-favorites-item-remove js-fav-remove" xmlns="http://www.w3.org/2000/svg" width="19.822" height="21.913" viewBox="0 0 19.822 21.913">
        <g id="Icon_feather-trash-2" data-name="Icon feather-trash-2" transform="translate(-4 -2.5)">
          <path id="Tracé_53" data-name="Tracé 53" d="M4.5,9H23.322" transform="translate(0 -1.817)" fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"/>
          <path id="Tracé_54" data-name="Tracé 54" d="M22.139,7.183V21.822a2.091,2.091,0,0,1-2.091,2.091H9.591A2.091,2.091,0,0,1,7.5,21.822V7.183m3.137,0V5.091A2.091,2.091,0,0,1,12.728,3h4.183A2.091,2.091,0,0,1,19,5.091V7.183" transform="translate(-0.909 0)" fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"/>
          <path id="Tracé_55" data-name="Tracé 55" d="M15,16.5v6.274" transform="translate(-3.18 -4.089)" fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"/>
          <path id="Tracé_56" data-name="Tracé 56" d="M21,16.5v6.274" transform="translate(-4.998 -4.089)" fill="none" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"/>
        </g>
      </svg>
      <a href="" class="rosa-favorites-item-link">
        <img src="" alt="" class="rosa-favorites-item-card-pic">
        <div class="rosa-favorites-item-card-title"></div>
        <div class="rosa-favorites-item-card-text"></div>
        <div class="rosa-favorites-item-card-price"></div>
      </a>

    </div>
    <div class="rosa-favorites-item-remove-mobile js-fav-remove">{{ section.settings.remove }}</div>
  </div>
</template>

<div class="rosa-favorites section-{{ section.id }}-padding">

  <div class="rosa-favorites-title container">{{ section.settings.page-title }}</div>
  <div class="rosa-favorites-header container">
    <div class="rosa-favorites-header-count-text">{{ section.settings.count-text }} <span>_</span> {{ section.settings.count-text2 }}</div>
    <div class="rosa-favorites-header-remove-all">{{ section.settings.remove-all }}</div>
  </div>

  <div class="rosa-favorites-list" id="favorites"></div>

  <div class="rosa-favorites-empty container" id="empty">
    <div class="rosa-favorites-empty-text">{{ section.settings.empty-text }}</div>
    <a href="{{ section.settings.empty-link }}" class="rosa-favorites-empty-link">{{ section.settings.empty-link-text }}</a>
  </div>

</div>

{% schema %}
{
  "name": "favorites page",
  "presets": [
    {
      "name": "favorites page",
      "category": "Custom"
    }
  ],

  "settings": [
    {
      "type": "text",
      "id": "page-title",
      "label": "MA LISTE DE FAVORIS text",
      "default": "MA LISTE DE FAVORIS"
    },
    {
      "type": "text",
      "id": "count-text",
      "label": "Vous avez",
      "default": "Vous avez"
    },
    {
      "type": "text",
      "id": "count-text2",
      "label": "articles dans votre liste text",
      "default": "articles dans votre liste."
    },
    {
      "type": "text",
      "id": "remove-all",
      "label": "TOUT SUPPRIMER text",
      "default": "TOUT SUPPRIMER"
    },
    {
      "type": "text",
      "id": "remove",
      "label": "SUPPRIMER text",
      "default": "SUPPRIMER"
    },
    {
      "type": "text",
      "id": "empty-text",
      "label": "VOUS N’AVEZ AJOUTÉ AUCUN FAVORIS text",
      "default": "VOUS N’AVEZ AJOUTÉ AUCUN FAVORIS POUR LE MOMENT, VISITEZ NOTRE BOUTIQUE EN LIGNE"
    },
    {
      "type": "text",
      "id": "empty-link-text",
      "label": "DÉCOUVRIR NOS COLLECTIONS text",
      "default": "DÉCOUVRIR NOS COLLECTIONS"
    },
    {
      "type": "url",
      "id": "empty-link",
      "label": "DÉCOUVRIR NOS COLLECTIONS url"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 45
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 45
    }
  ]
}

{% endschema %}
