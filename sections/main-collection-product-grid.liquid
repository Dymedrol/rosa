{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="collecton-list section-{{ section.id }}-padding">
    <div class="collecton-list-choices">
        <a href="/" class="collecton-list-choices-item collecton-list-choices-item_active">tout</a>
        <a href="/" class="collecton-list-choices-item">LES BAGUES</a>
        <a href="/" class="collecton-list-choices-item">LES PENDENTIFS</a>
        <a href="/" class="collecton-list-choices-item">LES BOUCLES D’OREILLE</a>
        <a href="/" class="collecton-list-choices-item">LES BRACELETS</a>
    </div>
    <div class="collecton-list-choices-filters">
        <div class="collecton-list-choices-filters-left">
            <div class="collecton-list-choices-filters-title">Filtre</div>
            <div class="collecton-list-choices-filters-left-content">
                <div class="collecton-list-choices-filters-item">
                    <span class="collecton-list-choices-filters-item-title">Collections</span>

                    <svg xmlns="http://www.w3.org/2000/svg" width="9.079" height="5.191" viewBox="0 0 9.079 5.191">
                      <path id="Icon_ionic-ios-arrow-down" data-name="Icon ionic-ios-arrow-down" d="M10.728,14.873l3.433-3.435a.646.646,0,0,1,.916,0,.654.654,0,0,1,0,.919l-3.89,3.892a.648.648,0,0,1-.895.019L6.377,12.359a.649.649,0,1,1,.916-.919Z" transform="translate(-6.188 -11.246)"/>
                    </svg>
                </div>
                <div class="collecton-list-choices-filters-item">
                    <span class="collecton-list-choices-filters-item-title">Matériaux</span>

                    <svg xmlns="http://www.w3.org/2000/svg" width="9.079" height="5.191" viewBox="0 0 9.079 5.191">
                      <path id="Icon_ionic-ios-arrow-down" data-name="Icon ionic-ios-arrow-down" d="M10.728,14.873l3.433-3.435a.646.646,0,0,1,.916,0,.654.654,0,0,1,0,.919l-3.89,3.892a.648.648,0,0,1-.895.019L6.377,12.359a.649.649,0,1,1,.916-.919Z" transform="translate(-6.188 -11.246)"/>
                    </svg>
                </div>
                <div class="collecton-list-choices-filters-item">
                    <span class="collecton-list-choices-filters-item-title">Pierre</span>

                    <svg xmlns="http://www.w3.org/2000/svg" width="9.079" height="5.191" viewBox="0 0 9.079 5.191">
                      <path id="Icon_ionic-ios-arrow-down" data-name="Icon ionic-ios-arrow-down" d="M10.728,14.873l3.433-3.435a.646.646,0,0,1,.916,0,.654.654,0,0,1,0,.919l-3.89,3.892a.648.648,0,0,1-.895.019L6.377,12.359a.649.649,0,1,1,.916-.919Z" transform="translate(-6.188 -11.246)"/>
                    </svg>
                </div>
                <div class="collecton-list-choices-filters-item">
                    <span class="collecton-list-choices-filters-item-title">Prix</span>

                    <svg xmlns="http://www.w3.org/2000/svg" width="9.079" height="5.191" viewBox="0 0 9.079 5.191">
                      <path id="Icon_ionic-ios-arrow-down" data-name="Icon ionic-ios-arrow-down" d="M10.728,14.873l3.433-3.435a.646.646,0,0,1,.916,0,.654.654,0,0,1,0,.919l-3.89,3.892a.648.648,0,0,1-.895.019L6.377,12.359a.649.649,0,1,1,.916-.919Z" transform="translate(-6.188 -11.246)"/>
                    </svg>
                </div>
            </div>
        </div>
        <div class="collecton-list-choices-filters-item">
            <span class="collecton-list-choices-filters-item-title">Trier par</span>

            <svg xmlns="http://www.w3.org/2000/svg" width="9.079" height="5.191" viewBox="0 0 9.079 5.191">
              <path id="Icon_ionic-ios-arrow-down" data-name="Icon ionic-ios-arrow-down" d="M10.728,14.873l3.433-3.435a.646.646,0,0,1,.916,0,.654.654,0,0,1,0,.919l-3.89,3.892a.648.648,0,0,1-.895.019L6.377,12.359a.649.649,0,1,1,.916-.919Z" transform="translate(-6.188 -11.246)"/>
            </svg>
        </div>
    </div>
    <div class="collecton-list-grid">


      {%- for product in collection.products -%}
          {% render 'card-product',
            card_product: product,
          %}
      {% endfor %}

    </div>
    <a href="/" class="collecton-list-link">CHARGER PLUS DE CRÉATIONS</a>
</section>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 45
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 45
    }
  ]
}
{% endschema %}
