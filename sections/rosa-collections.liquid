<section class="rosa-collections">

  {% for block in section.blocks %}

    <a href="{{ block.settings.collection.url }}" class="rosa-collections-item">

      <div class="rosa-collections-item-hover">
        {% if block.settings.collection.images[1] %}
          <img src="{{ block.settings.collection.images[1] | img_url: '682x770', crop: 'center' }}" alt="" class="rosa-collections-item-hover-pic">
          {% endif %}
        <div  class="rosa-collections-item-link">VOIR LA COLLECTION</div>
      </div>

      <img src="{{ block.settings.collection.featured_image | img_url: '354x328', crop: 'center' }}" alt="" class="rosa-collections-item-pic">
      <div class="rosa-collections-item-title">{{ block.settings.collection.title }}</div>
      <div class="rosa-collections-item-text">Or recyclé 18 carats, spinelles, grenats et tourmalines traçables</div>
    </a>

  {% endfor %}

</section>

{% schema %}
{
  "name": "rosa collections",
  "presets": [
    {
      "name": "rosa collections",
      "category": "Custom"
    }
  ],
  "max_blocks": 4,
  "blocks": [
      {
        "name": "collections",
        "type": "question",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "collection"
          }
        ]
      }
  ]
}

{% endschema %}
