{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<section class="rosa-showroom-slides section-{{ section.id }}-padding">
  {% for block in section.blocks %}
    <div class="rosa-showroom-slides-item">
      <img srcset="{{ block.settings.image | img_url: '318x614', crop: 'center' }} 1x, {{ block.settings.image | img_url: '636x1228', crop: 'center' }} 2x" src="{{ block.settings.image | img_url: '318x614', crop: 'center' }}" alt="" class="rosa-showroom-slides-item-pic" loading="lazy">
      <div class="rosa-showroom-slides-item-info">
        <div class="rosa-showroom-slides-item-title">{{ block.settings.title }}</div>
        {% if block.settings.link1-text %}<a href="{{ block.settings.link1-url}}" class="rosa-showroom-slides-item-link">{{ block.settings.link1-text }}</a>{% endif %}
        {% if block.settings.link2-text %}<a href="{{ block.settings.link2-url}}" class="rosa-showroom-slides-item-link">{{ block.settings.link2-text }}</a>{% endif %}
        {% if block.settings.link3-text %}<a href="{{ block.settings.link3-url}}" class="rosa-showroom-slides-item-link">{{ block.settings.link3-text }}</a>{% endif %}
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "rosa-showroom-slides",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 45
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 45
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "link1-text",
          "label": "link 1 text"
        },
        {
          "type": "url",
          "id": "link1-url",
          "label": "link 1 url"
        },
        {
          "type": "text",
          "id": "link2-text",
          "label": "link 2 text"
        },
        {
          "type": "url",
          "id": "link2-url",
          "label": "link 2 url"
        },
        {
          "type": "text",
          "id": "link3-text",
          "label": "link 3 text"
        },
        {
          "type": "url",
          "id": "link3-url",
          "label": "link 3 url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "rosa-showroom-slidess"
    }
  ]
}
{% endschema %}
