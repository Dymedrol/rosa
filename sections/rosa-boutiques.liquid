{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<section class="rosa-boutuques container section-{{ section.id }}-padding">
  <div class="rosa-boutuque-title">{{ section.settings.title}}</div>
  <div class="rosa-boutuque-content">
    {%- for block in section.blocks -%}
    <div class="rosa-boutuque-item">
      <img src="{{ block.settings.image | img_url: 'width 93', crop: 'center' }}" alt="" class="rosa-boutuque-item-pic">
      <div class="rosa-boutuque-item-info">
        <div class="rosa-boutuque-item-info-title">{{ block.settings.title }}</div>
        <div class="rosa-boutuque-item-info-adresse-title">adresse</div>
        <div class="rosa-boutuque-item-info-adresse">{{ block.settings.adresse }}</div>
      </div>
    </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "rosa-boutuques",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "NOS POINTS DE VENTE ET BOUTIQUES",
      "label": "title"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 45
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 45
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Boutiques item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "adresse",
          "default": "adresse",
          "label": "adresse"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "rosa-boutuques"
    }
  ]
}
{% endschema %}
